<%= form_for(:session, url: login_path) do |f| %>
  <div class="container">
  	<div class = "row">
      <div class = "col s12 m8 l6 offset-l3 offset-m2">
  	  	<center><h2>Log In</h2></center>
	    <div class="input-field">
	      <%= f.label :username %>
	      <%= f.text_field :username %>
	    </div>

	    <div class="input-field">
	      <%= f.label :password %>
	      <%= f.password_field :password %>
	    </div>

	    <div>
	    	<%= f.check_box :remember_me %>
	    	<%= f.label :remember_me, class: "checkbox inline" %>
	    </div>
	    <br>
	    <div class="actions">
	      <%= f.button "Login", class: "btn waves-effect waves-light", type: :submit %>
	    </div>
	    <br>
	    <center><%= link_to "Forgot your password?", new_password_reset_path %></center>
	  </div>
	</div>
  </div>
<% end %>
