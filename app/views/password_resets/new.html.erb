<%= form_for(:password_reset, url: password_resets_path) do |f| %>
  <div class="container">
  	<div class = "row">
      <div class = "col s12 m8 l6 offset-l3 offset-m2">
  	  	<center><h2>Password Reset</h2></center>
	    <div class="input-field">
	      <%= f.label :email %>
	      <%= f.email_field :email, class: 'form-control' %>
	    </div>
	    <div class="actions">
	      <%= f.button "Submit", class: "btn waves-effect waves-light", type: :submit %>
	    </div>
	    <br>
	    <center><%= link_to "Forgot your password?", new_password_reset_path %></center>
	  </div>
	</div>
  </div>
<% end %>
