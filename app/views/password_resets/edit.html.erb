<%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>
  <div class="container">
  	<div class = "row">
      <div class = "col s12 m8 l6 offset-l3 offset-m2">
  	  	<center><h2>Reset Password</h2></center>
	    
  	  	<%= hidden_field_tag :email, @user.email %>

	    <div class="input-field">
	      <%= f.label :password %>
	      <%= f.passsword_field :password, class: 'form-control' %>
	    </div>
	    <div class="input-field">
	      <%= f.label :password_confirmation %>
	      <%= f.passsword_field :password_confirmation, class: 'form-control' %>
	    </div>
	    <div class="actions">
	      <%= f.button "Submit", class: "btn waves-effect waves-light", type: :submit %>
	    </div>
	    <br>
	    <center><%= link_to "Forgot your password?", new_password_reset_path %></center>
	  </div>
	</div>
  </div>
<% end %>
